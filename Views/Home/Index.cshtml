@using System.Data
@model DataTable


@{
    ViewData["Title"] = "Fetching data from WebAPI";
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Id")
            </th>

            <th>
                @Html.DisplayName("FullName")
            </th>

            <th>
                @Html.DisplayName("Email")
            </th>

            <th>
                @Html.DisplayName("Phone")
            </th>

            <th>
                @Html.DisplayName("Address")
            </th>
        </tr>
    </thead>
    <tbody>


        @foreach (DataRow row in Model.Rows)
        {
            <tr>
                <td>
                    @row["Id"]
                </td>
                <td>
                    @row["fullName"]
                </td>
                <td>
                    @row["email"]
                </td>
                <td>
                    @row["phone"]
                </td>
                <td>
                    @row["address"]
                </td>
            </tr>
        }
    </tbody>

</table>